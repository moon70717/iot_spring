<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<select id="selectUserInfo" parameterType="ui" resultType="ui">
		select
		uNo,uName,uId,uPwd,uEmail,admin
		from user_info
		<where>
			1=1
			<if test="uiId!=null">
				and uiId=#{uId}
			</if>
			<if test="uiPwd!= null">
				and uiPwd=#{uPwd}
			</if>
		</where>
	</select>

	<select id="selectUserInfoList">
		select
		uNo,uName,uId,uPwd,uEmail,admin
		from user_info
	</select>

	<select id="vaildId" parameterType="ui" resultType="int">
		select *
		from user_info
		<where>
			uId=#{uId}
		</where>
	</select>

	<insert id="insertUserInfo" parameterType="ui">
		insert into user_info
		(uName,uId,uPwd,uEmail,admin)
		values
		(#{uName},#{uId},
		#{uPwd},#{uEmail},#{admin})
	</insert>
</mapper>